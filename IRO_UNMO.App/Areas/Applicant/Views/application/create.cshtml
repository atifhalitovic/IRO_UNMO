@using IRO_UNMO.App.ViewModels
@model IRO_UNMO.App.ViewModels.CreateNewAppVM
@using Microsoft.AspNetCore.Identity;
@{
    Layout = "_Layout5";
}

<head>
    <environment include="Production">
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    </environment>
</head>
<body>
    <div class="ui content">
        <form asp-action="create" method="post">
            @Html.HiddenFor(x => x.ApplicantId)
            <div class="ui compact segment">
                <div class="ui big ribbon label">
                    <i class="ui info icon"></i>
                    Information
                </div>
                <h4 class="ui header">
                    <div class="sub header">Searching possibilities available for applicant:</div>
                        <div class="ui large header">
                            @Model.Applicant.ApplicationUser.Name @Model.Applicant.ApplicationUser.Surname
                        </div>
                        <div class="sub header">
                            <p>E-mail: @Model.Applicant.ApplicationUser.Email</p>
                            <p>Mobile number: @Model.Applicant.ApplicationUser.PhoneNumber</p>
                            <p>Country: @Model.Applicant.ApplicationUser.Country.Name</p>
                            <p>University: @Model.Applicant.University.Name</p>
                            <p>Study field: @Model.Applicant.StudyField</p>
                            <p>Study cycle: @Model.Applicant.StudyCycle</p>
                            <p>Type: TO DO !!! TO DO @Model.Applicant.TypeOfApplication</p>
                            <p>Created profile: @Model.Applicant.CreatedProfile</p>
                            <p>Verification: @Model.Applicant.Verified.ToString()</p>
                        </div>
                </h4>
            </div>
            <div class="ui raised result segment">
                <div class="ui three column stackable grid">
                    <div class="four wide column">
                        <p>Dzemal Bijedic University of Mostar</p>
                        <div>
                            <div class="ui divider"></div>
                            <p>Available for applicants from:</p>
                            <div class="ui computer tablet only">
                                <a href="/institutions/institution/1310-univerzita-pavla-jozefa-afrika-v-koiciach" target="_blank"><img src="https://img.cdn.dreamapply.com/eyJ0eXAiOiJKV1QiLCJhbGciOiJSUzI1NiJ9..Fhbl7nvMffj-cF9WhCHsYKmYSYOemJDRduIf-2Yohco__jXRaWR5_88LN2_-gc7IOHQMH3Jp36Q3dB3q5t8knWVWRdiIQim0PFrMRzZyyoQ_guY9G4EgHdmAMNL9kkNsPriDAVP71qzVXcXdVg-s8-fJqBOc_ovcgiaVaHOSgRVByhSPud_q1-HJ8mF7EURKBUy1yupsSR8CIHMYxqtUT4Ce-EaSgsVu1ttYrNgJ6ALmr0ZK0VCmpuYP1WRONd1nN1TVzHrQHn_8yhTDCjMlIVSWB72jtFIxXWNoEiO20lGc9K5W9Q-YQ6H00_JsGxOSL_apnDv42A9NGLrgk0_zsA" /></a>
                            </div>
                            <div>
                                <i class="ui university icon mobile only"></i>
                                <a href="/institutions/institution/1310-univerzita-pavla-jozefa-afrika-v-koiciach" target="_blank" style="">Univerzitet incominga</a>
                            </div>

                            <small class="ui computer tablet only">Drzava incominga</small>
                        </div>
                        <div class="ui mobile only divider"></div>
                    </div>

                    <div class="seven wide column" style="padding-bottom: 3em">
                        <a href="/courses/course/7754-incoming-erasmus-mobility-1sem-1-sem?search=80283">Incoming mobility (1 semester)</a>
                        <p>Languages</p>
                        <p>
                            <small>Study language: English, Bosnian</small>
                        </p>
                    </div>
                    <div class="five wide apply column">
                        <div class="ui very relaxed list">
                            <div class="item">
                                <button type="submit" class="ui small fluid primary icon apply button">Apply now!</button>
                                <div class="ui tiny list">
                                    <div class="item">
                                        <i class="top aligned university large icon"></i>
                                        <div class="content">
                                            <div class="header">
                                                Application start
                                            </div>
                                            <div class="description">
                                                Nov 1, 2020
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <i class="top aligned university large icon"></i>
                                        <div class="content">
                                            <div class="header">
                                                Application deadline
                                            </div>
                                            <div class="description"><span>Dec 1, 2020 23:59 <span class="grayed">Europe/Warsaw time</span></span></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>

