@using IRO_UNMO.App.ViewModels
@model IRO_UNMO.App.ViewModels.ViewDocsVM
@using Microsoft.AspNetCore.Identity;
@{

}
<h2>Here you can review your submitted application documents.</h2>
<head>
    <environment include="Production">
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    </environment>
</head>
<body>
    <div class="container emp-profile">
        <form asp-action="DownloadFile2">
            @Html.HiddenFor(x => x.Application.ApplicationId)
            @Html.HiddenFor(x => x.Application.DocumentsId)
            <h3>Documents section</h3>
            <div class="row">
                <div class="col-md-4">
                    <label>Learning agreement</label>
                </div>
                <div class="col-md-4">
                    @Html.ActionLink(Model.Application.Documents.LearningAgreement, "DownloadFile", new { fileName = Model.Application.Documents.LearningAgreement })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Curriculum vitae</label>
                </div>
                <div class="col-md-4">
                    @Html.ActionLink(Model.Application.Documents.CV, "DownloadFile", new { fileName = Model.Application.Documents.CV })
                </div>
            </div>
        </form>
    </div>
</body>

