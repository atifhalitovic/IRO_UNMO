@model IRO_UNMO.App.ViewModels.OffersVM
@{
    ViewData["Title"] = "";
    Layout = "_Layout5";
}
<p></p>
<h2 class="ui header">Dzemal Bijedic current outgoing offers</h2>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <!--- Site CSS -->
    <link rel="stylesheet" type="text/css" href="~/dist/components/reset.css">
    <link rel="stylesheet" type="text/css" href="~/dist/components/site.css">
    <link rel="stylesheet" type="text/css" href="~/dist/components/grid.css">
    <!--- Component CSS -->
    <link rel="stylesheet" type="text/css" href="~/dist/components/icon.css">
    <link rel="stylesheet" type="text/css" href="~/dist/components/table.css">
    <link rel="stylesheet" type="text/css" href="~/dist/components/button.css">
    <link rel="stylesheet" type="text/css" href="~/dist/components/transition.css">
    <link rel="stylesheet" type="text/css" href="~/dist/components/popup.css">
    <link rel="stylesheet" type="text/css" href="~/dist/components/accordion.css">

    <script src="~/assets/library/jquery.min.js"></script>
    <script src="~/assets/library/iframe-content.js"></script>

    <script type="text/javascript" src="~/dist/components/popup.js"></script>
    <script type="text/javascript" src="~/dist/components/transition.js"></script>
    <script type="text/javascript" src="~/dist/components/accordion.js"></script>
    <script type="text/javascript" src="~/dist/components/modal.js"></script>
    <style>
        .ui.celled.table {
            width: 720px;
        }
    </style>
</head>
<body>
    @foreach (var x in Model.Offers)
    {
        @Html.HiddenFor(a => a.Offer.OfferId)
        <div class="ui raised result segment">
            <div class="ui three column stackable grid">
                <div class="four wide column">
                    <h4 class="ui header">@x.University.Name</h4>
                    <div>
                        <div class="ui divider"></div>
                        <p>Available for applicants from:</p>
                        <div class="ui computer tablet only">
                            <a>
                                <img src="~/unmo_preloader.png" style="height:80px;width:80px;">
                            </a>
                        </div>
                        <div>
                            <i class="ui university icon mobile only"></i>
                            <a>Dzemal Bijedic University of Mostar</a>
                        </div>
                        <small class="ui computer tablet only">Bosnia and Herzegovina</small>
                    </div>
                    <div class="ui mobile only divider"></div>
                </div>

                <div class="seven wide column" style="padding-bottom: 3em">
                    <a href="/courses/course/7754-incoming-erasmus-mobility-1sem-1-sem?search=80283">Outgoing Erasmus+ Mobility (@x.Semester)</a>
                    <h5>Information</h5>
                    <p>
                        <p>Study cycles: @x.Cycles</p>
                        <p>Study programmes: @x.Programmes</p>
                        <p>More info: <a>@x.Info</a></p>
                    </p>
                </div>
                <div class="five wide apply column">
                    <div class="ui very relaxed list">
                        <div class="item">
                            <a asp-controller="offers" asp-action="offer" asp-route-id="@x.OfferId" class="ui small fluid primary icon apply button">Edit current offer info</a>
                            <br />
                            <div class="ui tiny list">
                                <div class="item">
                                    <i class="top aligned university icon"></i>
                                    <div class="content">
                                        <div class="header">
                                            Application start
                                        </div>
                                        <div class="description">
                                            @x.Start.ToShortDateString()
                                        </div>
                                    </div>
                                </div>
                                <div class="item">
                                    <i class="top aligned university icon"></i>
                                    <div class="content">
                                        <div class="header">
                                            Application deadline
                                        </div>
                                        <div class="description"><span>@x.End.ToShortDateString() <span class="grayed">Europe/Mostar time</span></span></div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            @*<a asp-controller="offers" asp-action="delete" asp-route-id="@x.OfferId" class="ui right floated basic red button">Delete</a>*@
                            <a asp-action="delete" asp-controller="offers" class="ui right floated basic red button" asp-route-id="@x.OfferId" id="test">Delete</a>
                            <div class="ui modal test">
                                <i class="close icon"></i>
                                <div class="ui small header">
                                    Are you sure you want to delete selected offer?
                                    You will delete all applications for it.
                                </div>
                                <div class="actions">
                                    <div class="ui black deny button">
                                        No
                                    </div>
                                    <a asp-action="delete" asp-controller="offers" class="ui right floated red button" asp-route-id="@x.OfferId"id="test"><i class="checkmark icon"></i>Yes, delete this offer.</a>
                                </div>
                            </div>
                            @*<button asp-action="delete" asp-controller="offers" asp-route-id="@x.OfferId" class="ui right floated basic red button"><i class="eye"></i>Delete</button>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <a asp-controller="offers" asp-action="offer" class="ui basic green button">Add</a>
    <script>


        $(function () {
            $("#test").click(function () {
                $(".test").modal('show');
            });

            $(".test").modal({
                closable: true
            });
        });
        $('#dateofbirth').calendar({
            type: 'date'
        });

        $('#passissue').calendar({
            type: 'date'
        });

        $('#passexpiry').calendar({
            type: 'date'
        });
    </script>
</body>
<script>
    $(function () {
        $("#test").click(function () {
            $(".test").modal('show');
        });

        $(".test").modal({
            closable: true
        });
    });
    $('#dateofbirth').calendar({
        type: 'date'
    });

    $('#passissue').calendar({
        type: 'date'
    });

    $('#passexpiry').calendar({
        type: 'date'
    });
</script>
