@model IRO_UNMO.App.Areas.Admin.ViewModels.EditOffersVM
@{
    ViewData["Title"] = "";
    Layout = "_Layout5";
    var ID = ViewBag.ID;
}

<head>
    <script type="text/javascript" src="~/dist/calendar.min.js"></script>
    <link rel="stylesheet" href="~/dist/calendar.min.css" />

    <style>
        .ui.compact.segment {
            width: 850px;
        }
    </style>
</head>
<body>
    @if (Model.Offer == null)
    {
        <h2 class="ui header">Add offer</h2>
    }

    else if (Model != null)
    {
        <h2 class="ui header">Edit offer</h2>
    }
    <div class="ui small equal width form">
        <form asp-area="admin" asp-controller="offers" asp-action="offer" method="post">
            @Html.HiddenFor(a => a.Offer.OfferId)
            <div class="ui compact segment">
                <div class="fields">
                    <div class="field">
                        <label>Date from</label>
                        <div class="ui calendar" id="rangestart">
                            <div class="ui input left icon">
                                <i class="calendar icon"></i>
                                <input type="text" asp-for="@Model.Offer.Start" placeholder="Start">
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label>Date to</label>
                        <div class="ui calendar" id="rangeend">
                            <div class="ui input left icon">
                                <i class="calendar icon"></i>
                                <input type="text" asp-for="@Model.Offer.End" placeholder="End">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="fields">
                    <div class="field">
                        <label asp-for="@Model.Offer.Semester">Semester</label>
                        @Html.DropDownListFor(model => model.Offer.Semester, Model.Semesters, new { required = "Please choose semester for specific offer" })
                    </div>
                    <div class="field">
                        <label asp-for="@Model.Offer.University">University</label>
                        @Html.DropDownListFor(model => model.Offer.UniversityId, Model.Universities, new { required = "Please choose university for specific offer" })
                    </div>
                </div>
                <div class="fields">
                    <div class="field">
                        <label asp-for="@Model.Offer.Cycles">Study cycles</label>
                        @Html.DropDownListFor(model => model.Offer.Cycles, Model.Cycles, new { required = "Please choose study cycles for specific offer" })
                    </div>
                    <div class="field">
                        <label asp-for="@Model.Offer.Programmes">Study programmes</label>
                        @Html.DropDownListFor(model => model.Offer.Programmes, Model.Programmes, new { required = "Please choose study programmes for specific offer" })
                    </div>
                </div>
                <div class="fields">
                    <div class="field">
                        <label asp-for="@Model.Offer.Info">Additional info</label>
                        <input asp-for="@Model.Offer.Info" type="text">
                    </div>
                </div>
            </div>
            <button type="submit" class="ui primary button">Save</button>
        </form>
    </div>
    @if (Model.Offer != null && Model.Nominations.Count!=0)
    {
        <h2 class="ui header">Nominations for the offer</h2>
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>Full name</th>
                    <th>Faculty name</th>
                    <th>Created nomination</th>
                    <th>Submitted</th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var x in Model.Nominations)
            {
                <tbody>
                    <tr>
                        <td>@x.Applicant.ApplicationUser.Name @x.Applicant.ApplicationUser.Surname</td>
                        <td>@x.Applicant.FacultyName</td>
                        <td>@x.CreatedNom</td>
                        <td>@x.Finished</td>
                        <td>
                            <a asp-action="view" asp-controller="nomination" asp-route-id="@x.NominationId" class="ui primary button">Review</a>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    }
    <script>
        $('#passissue').calendar({
            type: 'date'
        });

        $('#passexpiry').calendar({
            type: 'date'
        });

        $('#rangestart').calendar({
            type: 'date',
            endCalendar: $('#rangeend')
        });
        $('#rangeend').calendar({
            type: 'date',
            startCalendar: $('#rangestart')
        });
    </script>
</body>
